<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Manu</th>
      <th>Model</th>
      <th>Desc</th>
      <th>Procname</th>
      <th>Proc</th>
      <th>Memsize</th>
      <th>Mem</th>
      <th>Hdtype</th>
      <th>Hdsize</th>
      <th>Hd</th>
      <th>Osname</th>
      <th>Os</th>
      <th>Vatprice</th>
      <th>Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.manu %></td>
        <td><%= product.model %></td>
        <td><%= product.desc %></td>
        <td><%= product.procname %></td>
        <td><%= product.proc_id %></td>
        <td><%= product.memsize %></td>
        <td><%= product.mem_id %></td>
        <td><%= product.hdtype %></td>
        <td><%= product.hdsize %></td>
        <td><%= product.hd_id %></td>
        <td><%= product.osname %></td>
        <td><%= product.os_id %></td>
        <td><%= product.vatprice %></td>
        <td><%= product.image_url %></td>
        <td><a href="/orderitems/create/<%= product.id %>">ADD TO CART</a></td>
        
        <% if @products.blank? %>
        We dont have products containing the phrase <%= params[:search] %>
        <% end %>
        
        <% if current_user!=nil %>
        <% if current_user.admin? %>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
        <td<%= link_to 'New Product', new_product_path %></td>
        <% end %>
        <% end %>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= button_to "GO TO YOUR CART NOW", "/carts/#{session[:cart_id]}", :method => :get, :form_class => "my_class" %>


